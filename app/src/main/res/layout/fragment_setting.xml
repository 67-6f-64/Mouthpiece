<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewConstr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main2">

    <Switch
        android:id="@+id/themeSwitch"
        android:layout_width="300dp"
        android:layout_height="63dp"
        android:layout_marginTop="100dp"
        android:buttonTint="#ee1c31"
        android:fontFamily="@font/ab_new"
        android:text="Dark Theme"
        android:textColor="@color/main1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/logOutBtn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/mybutton"
        android:backgroundTint="@color/main3"
        android:fontFamily="@font/ab_new"
        android:text="LOG OUT"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signInBtn2" />

    <Button
        android:id="@+id/signInBtn2"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/black"
        android:fontFamily="@font/ab_new"
        android:text="sign in"

        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleteProfileBtn" />

    <Button
        android:id="@+id/deleteProfileBtn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="118dp"
        android:background="@color/black"
        android:fontFamily="@font/ab_new"
        android:text="Delete voice profile"
        android:textColor="@color/white"
        android:radius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/themeSwitch" />

</androidx.constraintlayout.widget.ConstraintLayout>