<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.omega.mouthpiece">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        android:theme="@style/AppTheme" >
        <!--Main Activity (Splash Page)-->
        <activity android:name=".LoadingPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".webactivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--Login Page-->
        <activity android:name=".MainActivity"></activity>
        <!--Register Page-->
        <activity android:name=".RegisterPage"></activity>
        <!--MouthSelection-->
        <activity android:name=".MouthSelection" android:exported="true"></activity>
        <activity android:name=".DetailActivity"></activity>
        <!--MouthCreation-->
        <activity android:name=".UploadMouthsFrontPage" android:exported="true"></activity>
        <activity android:name=".mouthCreation" android:exported="true"></activity>
        <activity android:name=".mouthCreation_ImageUpload" android:exported="true"> </activity>
        <activity android:name=".imageConfirmation" android:exported="true"></activity>
        <!--Landing Page-->
        <activity android:name=".Landing"></activity>
        <!--Converter-->
        <activity android:name=".Converter" android:exported="true"></activity>
        <!--Training-->
        <activity android:name=".TrainingPage" android:exported="true"></activity>
        <!--Webview-->
        <activity android:name=".WebView" android:exported="true"></activity>
    </application>

</manifest>